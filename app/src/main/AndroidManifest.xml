<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".Ui.activity.Lich.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoList">

        <activity
            android:name=".Ui.activity.thongke.ThongKeActivity"
            android:exported="false"/>
        <activity
            android:name=".Ui.activity.thongke.UserActivity"
            android:exported="false"/>
        <activity android:name=".Ui.activity.Login.HelloActivity" android:exported="false"/>
        <activity android:name=".Ui.activity.Login.LoginActivity" android:exported="false"/>
        <activity android:name=".Ui.activity.Login.SignupActivity" android:exported="false"/>
        <activity android:name=".Ui.activity.Lich.AddTaskActivity" android:exported="false"/>
        <activity android:name=".Ui.activity.Lich.LichActivity" android:exported="false"/>

        <activity
            android:name=".Ui.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Áp dụng một chủ đề tiêu chuẩn, ổn định để gỡ lỗi -->
        <activity
            android:name=".Ui.setting.SettingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity android:name=".Ui.setting.AdvanceSettingActivity" android:exported="false"/>
        <activity android:name=".Ui.setting.FaqActivity" android:exported="false"/>
        <activity android:name=".Ui.setting.FeedbackActivity" android:exported="false"/>
        <activity android:name=".Ui.setting.StarredTasksActivity" android:exported="false"/>
        <activity android:name="com.example.todolist.Ui.theme.ThemeActivity" android:exported="false"/>

        <receiver
            android:name=".Ui.activity.Lich.AlarmReceiver"
            android:exported="false"/>

        <receiver
            android:name=".receiver.NotificationReceiver"
            android:exported="false"/>

    </application>

</manifest>