<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:padding="@dimen/bottom_sheet_padding">

        <!-- Top row: EditText + Light bulb -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Task Title Input -->
            <EditText
                android:id="@+id/editTaskTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Nhập nhiệm vụ mới tại đây"
                android:textSize="@dimen/text_size_medium"
                android:textColorHint="#BDBDBD"
                android:paddingTop="@dimen/spacing_tiny"
                android:paddingBottom="@dimen/spacing_tiny"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"
                android:minHeight="@dimen/icon_size_medium"
                android:gravity="top" />

            <!-- Light bulb icon -->
            <ImageButton
                android:id="@+id/btnIdea"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:padding="@dimen/spacing_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_lightbulb"
                android:contentDescription="Ý tưởng"
                app:tint="@color/orange" />

        </LinearLayout>

        <!-- Bottom row: Category label + Action icons + FAB -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Category label (clickable) -->
            <TextView
                android:id="@+id/textCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không có thể loại"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_secondary"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <!-- Action icons in a scrollable container -->
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnSetTime"
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Đặt thời gian"
                        android:padding="@dimen/spacing_tiny"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/icon_tint" />

                    <ImageButton
                        android:id="@+id/btnSetReminder"
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Đặt nhắc nhở"
                        android:padding="@dimen/spacing_tiny"
                        android:src="@drawable/ic_bell"
                        app:tint="@color/icon_tint" />

                    <ImageButton
                        android:id="@+id/btnSetRepeat"
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Lặp lại"
                        android:padding="@dimen/spacing_tiny"
                        android:src="@drawable/ic_repeat"
                        app:tint="@color/icon_tint" />

                    <ImageButton
                        android:id="@+id/btnAddSubtask"
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Công việc con"
                        android:padding="@dimen/spacing_tiny"
                        android:src="@drawable/ic_subtask"
                        app:tint="@color/icon_tint" />

                    <ImageButton
                        android:id="@+id/btnSetTag"
                        android:layout_width="@dimen/icon_size_normal"
                        android:layout_height="@dimen/icon_size_normal"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Thẻ tag"
                        android:padding="@dimen/spacing_tiny"
                        android:src="@drawable/ic_tag"
                        app:tint="@color/icon_tint" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Save FAB Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnSaveTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:src="@drawable/ic_check"
                app:backgroundTint="@color/primary"
                app:tint="@android:color/white"
                app:fabSize="normal"
                app:elevation="6dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
