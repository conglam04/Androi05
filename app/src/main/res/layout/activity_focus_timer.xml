<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:padding="@dimen/spacing_small"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tập trung"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_small"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more"
            android:padding="@dimen/spacing_small"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- Timer Circle -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_large"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/btnStartStop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_max="@dimen/timer_circle_size"
        app:layout_constraintHeight_max="@dimen/timer_circle_size">

        <!-- Outer Circle (Background) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_timer_background" />

        <!-- Progress Circle -->
        <ProgressBar
            android:id="@+id/circleProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressDrawable="@drawable/circle_progress_bar"
            android:background="@drawable/circle_shape"
            android:rotation="-90"
            android:max="100"
            android:progress="100" />

        <!-- Timer Text -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="25:00"
            android:textSize="@dimen/text_size_timer"
            android:textStyle="bold"
            android:textColor="#0D2640"
            android:clickable="true"
            android:focusable="true" />
    </FrameLayout>

    <!-- Start/Stop Button -->
    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="@dimen/spacing_xlarge"
        android:layout_marginEnd="@dimen/spacing_xlarge"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="Bắt đầu"
        android:textSize="@dimen/text_size_large"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary_rounded"
        app:layout_constraintBottom_toTopOf="@id/btnFinish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Finish Button (shown when timer is running) -->
    <Button
        android:id="@+id/btnFinish"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="@dimen/spacing_xlarge"
        android:layout_marginEnd="@dimen/spacing_xlarge"
        android:layout_marginBottom="@dimen/spacing_xlarge"
        android:text="Kết thúc"
        android:textSize="@dimen/text_size_large"
        android:textColor="#2196F3"
        android:background="@drawable/button_secondary_rounded"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

