<?xml version="1.0" encoding="utf-8"?>
<com.example.todolist.Ui.widget.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/task_item_margin">

    <!-- Background layer with action buttons -->
    <LinearLayout
        android:id="@+id/layoutBackground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/spacing_normal">

        <ImageButton
            android:id="@+id/btnStar"
            android:layout_width="@dimen/icon_size_action"
            android:layout_height="match_parent"
            android:background="@color/blue_light"
            android:src="@drawable/ic_star"
            app:tint="@android:color/white"
            android:contentDescription="Star"/>

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="@dimen/icon_size_action"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:src="@drawable/ic_calendar"
            app:tint="@android:color/white"
            android:contentDescription="Calendar"/>

        <ImageButton
            android:id="@+id/btnFocus"
            android:layout_width="@dimen/icon_size_action"
            android:layout_height="match_parent"
            android:background="@color/blue_dark"
            android:src="@drawable/ic_hourglass"
            app:tint="@android:color/white"
            android:contentDescription="Focus"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/icon_size_action"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:src="@drawable/ic_delete"
            app:tint="@android:color/white"
            android:contentDescription="Delete"/>
    </LinearLayout>

    <!-- Foreground layer with task content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/task_item_padding"
            android:background="@color/white"
            android:minHeight="@dimen/icon_size_large">

            <CheckBox
                android:id="@+id/checkboxTask"
                android:layout_width="@dimen/task_checkbox_size"
                android:layout_height="@dimen/task_checkbox_size"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_small">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Task Title" />

                <TextView
                    android:id="@+id/textCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Category" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnRepeat"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_repeat"
                android:visibility="gone"
                android:padding="@dimen/spacing_small"
                android:contentDescription="Repeat"/>

            <ImageButton
                android:id="@+id/btnFlag"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_flag_outline"
                android:padding="@dimen/spacing_small"
                android:contentDescription="Flag"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</com.example.todolist.Ui.widget.SwipeRevealLayout>