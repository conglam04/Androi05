<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/bottom_sheet_padding"
    android:background="@drawable/bg_bottom_sheet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn lặp lại"
        android:textSize="@dimen/text_size_xlarge"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_normal"/>

    <RadioGroup
        android:id="@+id/radioGroupRecurrence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không lặp lại"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

        <RadioButton
            android:id="@+id/radioDaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng ngày"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

        <RadioButton
            android:id="@+id/radioWeekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng tuần"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

        <RadioButton
            android:id="@+id/radioMonthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng tháng"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

        <RadioButton
            android:id="@+id/radioYearly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng năm"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

        <RadioButton
            android:id="@+id/radioCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tùy chỉnh..."
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/layoutCustomOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/spacing_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn các ngày trong tuần:"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkSunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:text="CN"/>

            <CheckBox
                android:id="@+id/checkMonday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:text="T2"/>

            <CheckBox
                android:id="@+id/checkTuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:text="T3"/>

            <CheckBox
                android:id="@+id/checkWednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:text="T4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_small">

            <CheckBox
                android:id="@+id/checkThursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:text="T5"/>

            <CheckBox
                android:id="@+id/checkFriday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:text="T6"/>

            <CheckBox
                android:id="@+id/checkSaturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:text="T7"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Repeat End Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết thúc lặp lại"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_small"/>

    <RadioGroup
        android:id="@+id/radioGroupRepeatEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioNever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không giới hạn"
            android:textSize="@dimen/text_size_medium"
            android:checked="true"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

        <RadioButton
            android:id="@+id/radioUntilDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đến ngày"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

        <RadioButton
            android:id="@+id/radioCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lần"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/spacing_medium"
            android:minHeight="@dimen/icon_size_large"/>

    </RadioGroup>

    <!-- Until Date Picker -->
    <LinearLayout
        android:id="@+id/layoutUntilDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_xlarge"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến ngày: "
            android:textSize="@dimen/text_size_normal"
            android:layout_marginEnd="@dimen/spacing_small"/>

        <Button
            android:id="@+id/btnSelectEndDate"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="Chọn ngày"/>

    </LinearLayout>

    <!-- Occurrence Count Picker -->
    <LinearLayout
        android:id="@+id/layoutCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_xlarge"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lần: "
            android:textSize="@dimen/text_size_normal"
            android:layout_marginEnd="@dimen/spacing_small"/>

        <NumberPicker
            android:id="@+id/numberPickerCount"
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" lần"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginStart="@dimen/spacing_small"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="Lưu"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/spacing_normal"/>

</LinearLayout>
</ScrollView>
